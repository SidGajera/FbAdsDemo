<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.facebookadsdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ActivityBase"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FacebookAdsDemo"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true">

        <activity android:name=".NativeBannerAd_Activity"
            android:label="NativeBannerAd"/>

        <activity android:name=".NativeAd_Activity"
            android:label="NativeAd"/>

        <activity android:name=".RewardAd_Activity"
            android:label="RewardedAd"/>

        <activity android:name=".RectangleAd_Activity"
            android:label="RectangleAd"/>

        <activity
            android:name=".InterstitialAd_Activity"
            android:label="InterstitialAd" />

        <activity
            android:name=".BannerAd_Activity"
            android:label="BannerAd" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.ads.AudienceNetworkActivity"
            android:hardwareAccelerated="true" />
    </application>

</manifest>